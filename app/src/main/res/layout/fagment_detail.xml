<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:id="@+id/fragment_detail_container"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.android.sunshine.app.DetailFragment" tools:ignore="MergeRootFrame">

    <ProgressBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/search_complete"
            android:visibility="gone"
        android:indeterminate="true"
        android:layout_gravity="center"/>


    <ListView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/list_view_word"
        android:layout_weight="2"
        >
    </ListView>


</LinearLayout>
